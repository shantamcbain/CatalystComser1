[% PageVersion = 'setup.tt,v 0.01 2023/09/01 shanta Exp shanta ' %]
[% IF debug_mode == 1 %]
  [% PageVersion %]
    [% INCLUDE 'debug.tt' %]
[% END %]

<h1>Database Setup.pm</h1>

[% IF error_message %]
    <div class="alert alert-danger">
        <strong>Error:</strong> [% error_message %]
    </div>
[% END %]

<h2>Database Schema</h2>

<button id="showSchemaBtn">Show Schema</button>

<div id="schemaPopup" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        [% IF schema_info %]
            <table>
                <tr>
                    <th>Table Name</th>
                    <th>Engine</th>
                    <th>Version</th>
                </tr>
[% FOREACH table IN schema_info %]
    <tr>
        <td>[% table.TABLE_NAME %]</td>
        <td>[% table.ENGINE %]</td>
        <td>[% table.VERSION %]</td>
        <td>
            <button onclick="showTableStructure('[% table.TABLE_NAME %]')">Show Structure</button>
        </td>
        <td>
            <!-- The Modal -->
            <div id="myModal_[% table.TABLE_NAME %]" class="modal">
                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p id="modal-text_[% table.TABLE_NAME %]">Some text in the Modal..</p>
                </div>
            </div>
        </td>
    </tr>
[% END %]            </table>
        [% END %]
        [% IF NOT schema_info %]
            <p>No schema information available.</p>
        [% END %]
    </div>
</div>

<form method="POST">
    Host: <input type="text" name="host" value="[% dbi_info.host %]" /><br>
    Port: <input type="text" name="port" value="[% dbi_info.port %]" /><br>
    Database: <input type="text" name="database" value="[% dbi_info.database %]" /><br>
    User: <input type="text" name="user" value="[% dbi_info.user %]" /><br>
    Password: <input type="password" name="password" value="[% dbi_info.password %]" /><br>
    <input type="submit" value="Submit" />
</form>

<h2>Search Schema for a table and tables related to it</h2>
<form method="POST" action="/search_schema">
    Table Name: <input type="text" name="table_name" /><br>
    <input type="submit" value="Search" />
</form>

[% IF sorted_tables %]
    <h2>Sorted Tables and Their Related Tables</h2>
    [% FOREACH table IN sorted_tables %]
        <h3>[% table.table_name %]</h3>
        <table>
            <tr>
                <th>Field</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
            [% FOREACH column IN table.columns %]
                <tr>
                    <td>[% column.Field %]</td>
                    <td>[% column.Type %]</td>
                    <td>
                        <form method="POST" action="/search_schema">
                            <input type="hidden" name="table_name" value="[% column.Field %]" />
                            <input type="submit" value="Search" />
                        </form>
                    </td>
                </tr>
            [% END %]
        </table>
        <h4>Related Tables</h4>
        <ul>
            [% FOREACH related_table IN table.related_tables %]
                <li>[% related_table.TABLE_NAME %]</li>
            [% END %]
        </ul>
    [% END %]
[% ELSE %]
    <p>No sorted tables available.</p>
[% END %]

<script>
    var modal = document.getElementById('schemaPopup');
    var btn = document.getElementById('showSchemaBtn');
    var span = document.getElementsByClassName('close')[0];

    btn.onclick = function() {
        modal.style.display = 'block';
    }

    span.onclick = function() {
        modal.style.display = 'none';
    }

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }
</script>
