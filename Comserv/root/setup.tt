<script>/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal Content */
.modal-content {
  background-color: #fefefe;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}

/* The Close Button */
.close {
  color: #aaaaaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

</script>
<script>
function showTableStructure(tableName) {
    // Make an AJAX request to the server to fetch the table structure
    fetch('/get_table_structure/' + tableName)
    .then(response => {
        console.log('Response:', response);
        return response.text();  // Use the text() method instead of json() to get the raw response text
    })
    .then(text => {
        console.log('Response text:', text);
        var data = JSON.parse(text);  // Parse the response text into a JavaScript object

        // Get the modal and the element in the modal where the text should be inserted
        var modal = document.getElementById("myModal_" + tableName);
        var modalText = document.getElementById("modal-text_" + tableName);


        // Start the HTML table
        var html = '<table>';

        // Add table headers
        html += '<tr><th>Field</th><th>Type</th></tr>';

        // Loop through the data and add each row to the table
        for (var i = 0; i < data.length; i++) {
            html += '<tr><td>' + data[i].Field + '</td><td>' + data[i].Type + '</td></tr>';
        }

        // End the HTML table
        html += '</table>';

        // Insert the table into the modal
        modalText.innerHTML = html;

        // Display the modal
        modal.style.display = "block";
    })
    .catch(error => {
        console.error('Error:', error);
    });
}
</script>
